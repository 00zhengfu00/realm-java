<?eclipse.ant.import?>
<project basedir="." default="build" name="AndroidTightdb">
        <property name="srcdir" value="src" />
        <property name="version" value="1.6" />

        <target name="generate-sources">
                <echo message="${ant.project.name}: ${ant.file}" />
                <javac source="${version}" target="${version}" srcdir="${srcdir}" includeantruntime="false">
                        <compilerarg value="-classpath" />
                        <compilerarg value="libs/tightdb.jar" />
                        <compilerarg value="-processor" />
                        <compilerarg value="org.jannocessor.processor.JannocessorProcessor" />
                        <compilerarg value="-processorpath" />
                        <compilerarg value="libs/tightdb/tightdb-devkit.jar" />
                        <compilerarg value="-s" />
                        <compilerarg value="${srcdir}" />
                        <compilerarg value="-proc:only" />
                        <compilerarg value="-Aprofile=${srcdir}" />
                </javac>
        </target>
</project>
