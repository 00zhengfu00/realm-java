<?xml version="1.0"?>
<?eclipse.ant.import?>
<project name="tightdb-example-gen" basedir="." default="generate-sources">
	
	<property name="srcdir" value="src/com/tightdb" />
	<property name="version" value="1.6" />

	<target name="generate-sources">
		<echo message="${ant.project.name}: ${ant.file}" />
		<javac source="${version}" target="${version}" srcdir="${srcdir}">
			<compilerarg value="-classpath" />
                        <compilerarg value="libs/tightdb.jar;lib-sqlite/sqlite4java.jar" />
			<compilerarg value="-processor" />
			<compilerarg value="com.tightdb.generator.CodeGenProcessor" />
			<compilerarg value="-processorpath" />
			<compilerarg value="libs/tightdb/tightdb-devkit.jar" />
			<compilerarg value="-s" />
			<compilerarg value="${srcdir}" />
			<compilerarg value="-proc:only" />
			<compilerarg value="-Aprofile=${srcdir}" />
		</javac>
	</target>
	
</project>
